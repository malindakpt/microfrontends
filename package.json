    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/mock-req-res": "^1.1.1",
    "@types/node": "^13.13.2",
    "@types/pg": "^7.14.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
