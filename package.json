{
  "name": "navy",
  "private": true,
  "workspaces": [
    "services/*/*",
    "libs/*"
  ],
  "engines": {
    "node": ">=6 <14",
    "npm": ">=6"
  },
  "scripts": {
    "clean-dist": "lerna run clean --parallel",
    "clean-all": "yarn clean-dist && lerna clean --yes",
    "db:reset": "lerna run db:reset --concurrency 1",
    "start": "yarn build && lerna run start --scope='{@id/service,@id/proxy,media-service,video-service}' --stream",
    "build:libs": "lerna run build --scope='@ax/*'",
    "build:id": "lerna run build --scope='{@ax/*,id-service}' --include-dependencies",
    "start:dev:libs": "lerna run start:dev --scope='@ax/*' --parallel",
    "start:dev:id": "lerna run start:dev --scope='{id-service,id-portal-*}' --stream --parallel",
    "start:dev:id:service": "lerna run start:dev --scope='id-service' --stream --parallel",
    "start:dev:id:portals": "lerna run start:dev --scope='id-portal-*' --stream --parallel",
    "start:workflows": "pilet debug 'services/**/workflows/{**/,}src/index.tsx' --port 10051",
    "build:fe": "lerna run build --scope='{feed-service,frontend-host}'",
    "start:fe": "lerna run start --scope='{feed-service,frontend-host}' --stream",
    "start:fe:host": "lerna run start --scope='frontend-host' --stream",
    "start:fe:service": "lerna run start --scope='feed-service' --stream",
    "build": "lerna run build --ignore='frontend-host' && lerna run build --scope='frontend-host'",
    "test": "jest --silent",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand --silent",
    "test:cov": "jest --coverage --silent",
    "posttest:cov": "ts-node scripts/open-coverage.command.ts",
    "test:watch": "jest --watch --silent",
    "lint": "eslint services/**/src/**/*.ts libs/**/src/**/*.ts --fix",
    "apply-templates": "ts-node scripts/apply-templates.command.ts ",
    "apply-all-templates": "ts-node scripts/apply-templates.command.ts --overwrite",
    "db:start": "cd scripts/db && docker-compose -f docker-compose.yml up -d",
    "db:stop": "cd scripts/db && docker-compose -f docker-compose.yml down",
    "start:ui": "lerna run start --scope='@ax/cms-ui' --stream",
    "test:ui": "lerna run test --scope='@ax/cms-ui' --stream",
    "test:ui-watch": "lerna run test:watch --scope='@ax/cms-ui' --stream",
    "lint:ui": "lerna run lint --scope='@ax/cms-ui' --stream",
    "build:ui": "lerna run build --scope='@ax/cms-ui' --stream",
    "storybook:ui": "lerna run storybook --scope='@ax/cms-ui' --stream",
    "build:storybook-ui": "lerna run build-storybook --scope='@ax/cms-ui' --stream",
    "--shortcuts to run commands in services or libs folder--": "",
    "id": "npm run --prefix services/id/service",
    "video": "npm run --prefix services/video/service",
    "media": "npm run --prefix services/media/service",
    "ax-guard": "npm run --prefix services/id/lib-id-guard",
    "cms-ui": "npm run --prefix libs/cms-ui",
    "frontend-host": "npm run --prefix services/fe-orchestration/frontend-host",
    "service-common": "npm run --prefix libs/service-common",
    "--production build commands--": "",
    "clean-node-modules": "npx lerna clean --yes && npx rimraf node_modules",
    "build:id-service:prod": "yarn workspaces focus navy id-service && lerna run build --scope id-service --include-dependencies && yarn workspaces focus --production id-service",
    "build:id-proxy:prod": "yarn workspaces focus navy id-proxy && lerna run build --scope id-proxy --include-dependencies && yarn workspaces focus --production id-proxy",
    "build:id-portal-tenant-admin:prod": "yarn workspaces focus navy id-portal-tenant-admin && lerna run build --scope id-portal-tenant-admin --include-dependencies",
    "build:id-portal-admin:prod": "yarn workspaces focus navy id-portal-admin && lerna run build --scope id-portal-admin --include-dependencies",
    "build:media-service:prod": "yarn workspaces focus navy media-service && lerna run build --scope media-service --include-dependencies && yarn workspaces focus --production media-service",
    "build:video-service:prod": "yarn workspaces focus navy video-service && lerna run build --scope video-service --include-dependencies && yarn workspaces focus --production video-service"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@graphql-codegen/cli": "^1.13.5",
    "@graphql-codegen/typescript": "^1.13.5",
    "@graphql-codegen/typescript-operations": "^1.13.5",
    "@graphql-codegen/typescript-react-apollo": "^1.13.5",
    "@graphql-codegen/typescript-urql": "^1.13.5",
